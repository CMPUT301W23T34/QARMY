<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.QArmy" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/QARMYGreen</item>
        <item name="colorPrimaryVariant">@color/QARMYDarkGreen</item>
        <item name="colorOnPrimary">@color/QARMYWhite</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/QARMYLightBrown</item>
        <item name="colorSecondaryVariant">@color/QARMYDarkBrown</item>
        <item name="colorOnSecondary">@color/QARMYBlack</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <item name="android:textColorPrimary">?attr/colorOnPrimary</item>
        <item name="android:editTextColor">@color/QARMYBlack</item>
        <!-- Customize your theme here. -->
    </style>
</resources>